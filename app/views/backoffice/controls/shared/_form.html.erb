          <h1 class="page-header">Configuração Site</h1>
            <% if @control.errors.any? %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                  <ul>
                    <%  @control.errors.full_messages.each do |message|  %>
                      <li><%=  message  %></li>
                    <% end %>
                  </ul>
              </div>
            <% end %>
              <div class="panel panel-primary">
                  <div class="panel-heading">
                     <%= action %>
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                      <%= form_for([:backoffice, @control]) do |f|  %>
                        <div class="form-group">
                            <label>Sobre</label>
                            <%=  f.text_field :about, class:"form-control" %>
                            <label>Missão</label>
                            <%=  f.text_field :mission, class:"form-control" %>
                            <label>Visão</label>
                            <%=  f.text_field :vision, class:"form-control", :rows => 10, style: 'width:100%;' %>
                        </div>
                      <!-- /.table-responsive -->
                        <button type="submit" class="btn btn-success">Salvar</button>
                      <% end %>
                  </div>
                  <!-- /.panel-body -->
              </div>