<h1 class="page-header">Administrador</h1>
<div class="panel panel-primary">
  <div class="panel-heading">
    <b>Listando os Administradores</b>

    <% if policy(@admins).new? %>
      <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
              <i class="fa fa-plus"></i>
      <% end %>
    <% end %>

  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>Nome</th>
                      <th>Email</th>
                      <th>Tipo de Acesso</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                <%  @admins.each do |admin|  %>
                  <tr>
                      <td><%=  admin.id  %></td>
                      <td><%=  admin.name  %></td>
                      <td><%=  admin.email  %></td>
                      <td><%=  admin.role_br  %></td>
                      <td><%= link_to edit_backoffice_admin_path(admin.id), class:"btn btn-success btn-circle" do %>
                        <i class="fa fa-edit"></i>
                        <% end %>
                        <% if current_admin.id != admin.id %>
                        <%= link_to backoffice_admin_path(admin.id), method: :delete , class:"btn btn-danger btn-circle", data: {confirm: "VocÃª tem certeza que deseja excluir <b>#{admin.name}</b>?"} do %>
                          <i class="fa fa-minus"></i></td>
                        <% end %>
                        <% else %>
                            <%= link_to '#', disabled: "disabled", class:"btn btn-danger btn-circle" do %>
                            <i class="fa fa-minus"></i></td>
                        <% end %>
                      <% end %>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
      <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>